{
  "name": "agile-actors",
  "version": "1.0.0",
  "description": "Agile Actors MultiRepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rm -rf node_modules packages/*/node_modules && rm -rf packages/*/dist",
    "build": "yarn clean && yarn && meta git update && yarn && lerna link",
    "build:actions": "yarn workspace @agile-actors/actions build",
    "start": "lerna run start --parallel --stream",
    "start:client": "ttab -t 'Agile Actors Client' 'lerna run start --scope @agile-actors/client --stream'",
    "start:server": "ttab -t 'Agile Actors Server' 'lerna run start --scope @agile-actors/server --stream'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kogal/agile-actors.git"
  },
  "author": "Agile Actors",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/kogal/agile-actors/issues"
  },
  "homepage": "https://github.com/kogal/agile-actors#readme",
  "dependencies": {
    "lerna": "2.9.0",
    "meta-git": "0.0.32",
    "meta-yarn": "0.0.4",
		"ttab": "0.6.1"
  }
}
